.unity-progress-bar__progress {
    background-color: rgba(0, 128, 0, 0.7);
}

.unity-progress-bar__background {
    background-color: rgba(255, 255, 255, 0.7);
    border-color: rgba(245, 245, 245, 0.7);
    border-radius: 3px;
}

.container {
    flex-shrink: 0;
    flex-grow: 1;
    align-items: stretch;
    justify-content: center;
    flex-direction: row;
}

.health-bar {
    flex-basis: auto;
    flex-shrink: 0;
    flex-grow: 0.33;
}