.container {
    flex-direction: column;
    background-color: rgba(137, 178, 255, 0.51);
    width: 100%;
    height: 100%;
    justify-content: center;
}

.list-container {
    flex-direction: column;
    background-color: rgba(255, 0, 0, 0.7);
    padding: 8px 64px;
    align-self: center;
    border-radius: 3px;
}

.menu-item {
    -unity-text-align: upper-center;
    font-size: 28px;
}

.menu-item:hover {
    background-color: white;
}
